@model PostViewModel

@{ 

}

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">

        <input asp-for="Id" type="hidden" />

        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="Private">Private</option>
                <option value="General">General</option>
                <option value="ProfilePicturePrivate">Profile Picture Private</option>
                <option value="ProfilePictureGeneral">Profile Picture General</option>
            </select>
        </div>

        <div>
            <label>Body</label>
            <input asp-for="Body" />
        </div>

        <div>
            <label>Image</label>
            <input asp-for="Image" />
        </div>

        <input type="submit" value="Submit" />

    </form>
</div>